import Foundation


//1. Написать функцию, которая определяет, четное число или нет
var numbers = [1,2,3,4,5]
for numberC in numbers{
    if numberC % 2 == 0 {
        print("\(numberC) четное число")
    } else {
        print("\(numberC) нечетное число")
    }
}

//2. Написать функцию, которая определит делится ли число без остатка на 3.
for numberT in numbers{
    if numberT % 3 == 0 {
        print("\(numberT) делится на 3 без остатка")
    } else {
        print("\(numberT) делится на 3 с остатком")
    }
}

//3. Создать возрастающий массив из 100 чисел.
var oneHundred: Array<Int> = []
for i in 1...100{
    oneHundred.append(i)
}
print(oneHundred)

//4. Удалить из этого массива все четные числа и все числа, которые не делятся на 3.
var toDelete = oneHundred.filter {$0 % 2 != 0 && $0 % 3 == 0}
   print(toDelete)
